<Page
    x:Class="FutRomm.View.MillionaireGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FutRomm.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
     Background="#FF1F1F1F" Height="850"  Width="1596">

    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="134*"/>
            <RowDefinition Height="707*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Titulo" Margin="225,35,219,0" TextWrapping="Wrap" Text="Who wants to be a Millionaire?" VerticalAlignment="Top" FontWeight="Bold" FontSize="48" Height="64" Foreground="White" FontFamily="Montserrat"/>
        <Image x:Name="fondo" HorizontalAlignment="Center" Height="675" VerticalAlignment="Center" Width="1216" Grid.Row="1" Source="/Assets/millionaire.jpg" Stretch="Fill" Opacity="0.71"/>
        <TextBlock x:Name="tbx_name" HorizontalAlignment="Left" Margin="171,200,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="35" Width="252" FontSize="24" FontFamily="Montserrat" TextAlignment="Center" FocusVisualPrimaryBrush="#FF3FBE59"/>
        <Image x:Name="img_maldini" HorizontalAlignment="Left" Height="530" Margin="-21,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="385" Source="/Assets/maldini.png" Stretch="Fill"/>
        <TextBox x:Name="tbx_q" HorizontalAlignment="Center" Margin="0,540,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Bienvenido a Quien quiere ser millonario! Yo soy Julio Maldonado y estoy aquí para ponerte a prueba. A continuación deberás responder 15 preguntas sobre fútbol, donde sólo una respuesta es la correcta.  ¿Lograrás acertar todas las preguntas y convertirte en una enciclopedia del fútbol?" VerticalAlignment="Top" FontFamily="Montserrat" FontSize="22" Height="101" Width="1130" Background="#FF121144"/>
    </Grid>
</Page>